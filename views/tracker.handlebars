<!-- Meal Input Modal -->
<div id="food-modal" class="modal">
    <div class="modal-content">
        <span class="close">&times;</span>
        <div class="container mt-5">
            <h1>Search Form</h1>
            <form id="search-form">
                <div class="mb-3">
                    {{!-- keyword input--}}
                    <label for="ingredientKeywords" class="form-label">Ingredient Keywords</label>
                    <input type="text" class="form-control" id="ingredientKeywords" placeholder="Enter ingredient keywords">
                </div>
                <div class="row">
                    <div class="col">
                        {{!-- calories range input --}}
                        <label for="minCalories" class="form-label">Min Calories</label>
                        <div class="input-group">
                            <input type="number" class="form-control" id="minCalories" placeholder="Min calories">
                            <span class="input-group-text">kcal</span>
                        </div>
                    </div>
                    <div class="col">
                        <label for="maxCalories" class="form-label">Max Calories</label>
                        <div class="input-group">
                            <input type="number" class="form-control" id="maxCalories" placeholder="Max calories">
                            <span class="input-group-text">kcal</span>
                        </div>
                    </div>
                </div>
                <div class="row mt-3">
                    <div class="col">
                        {{!-- protein range input --}}
                        <label for="minProtein" class="form-label">Min Protein</label>
                        <div class="input-group">
                            <input type="number" class="form-control" id="minProtein" placeholder="Min protein">
                            <span class="input-group-text">g</span>
                        </div>
                    </div>
                    <div class="col">
                        <label for="maxProtein" class="form-label">Max Protein</label>
                        <div class="input-group">
                            <input type="number" class="form-control" id="maxProtein" placeholder="Max protein">
                            <span class="input-group-text">g</span>
                        </div>
                    </div>
                </div>
                <button type="submit" class="btn btn-primary mt-3">Search</button>
            </form>
            <!-- Search results container -->
            <div id="search-results" class="search-results mt-4"></div>
        </div>
        {{!-- append results here --}}
        <div id="food-details"></div>
        <button id="add-food-btn">Add</button>
    </div>
</div>

 <!-- Ingredient Search Modal -->
    <div id="ingredient-search-modal" class="modal fade" tabindex="-1" role="dialog">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">Search for Ingredient</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    <form id="food-search-form" class="mb-3">
                        <div class="row">
                            <div class="col">
                                <input type="text" id="query" class="form-control" placeholder="Search for food">
                            </div>
                            <div class="col-auto">
                                <button type="submit" class="btn btn-primary">Search</button>
                            </div>
                        </div>
                    </form>
                    <div id="ingredient-results" class="mt-3"></div>
                    <div id="ingredient-food-details" class="mt-3"></div>
                    <div id="ingredient-nutrient-results" class="mt-3"></div>
                    <div class="row mt-3">
                        <div class="col">
                            <input type="text" id="serving-size" class="form-control" placeholder="Enter amount in grams">
                        </div>
                        <div class="col-auto">
                            <button id="calculate" class="btn btn-primary">Calculate Nutrients</button>
                            <button id="ingredient-append" class="btn btn-primary">Add Ingredient</button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

<!-- Datepicker Modal -->
