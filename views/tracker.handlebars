        <button id="open-datepicker-btn">Or, go back to a previous date</button>
    </div>
    <section id="breakfast">
        <h2>Breakfast</h2>
        <button class="btn" data-target="breakfast">Add Food</button>
        <ul>
            <div class="recipe-info-container"></div>
        </ul>
    </section>

    <section id="lunch">
        <h2>Lunch</h2>
        <button class="btn" data-target="lunch">Add Food</button>
        <ul>
            <div class="recipe-info-container"></div>
        </ul>
    </section>

    <section id="dinner">
        <h2>Dinner</h2>
        <button class="btn" data-target="dinner">Add Food</button>
        <ul>
            <div class="recipe-info-container"></div>
        </ul>
    </section>

    <section id="snacks">
        <h2>Snacks</h2>
        <button class="btn" data-target="snacks">Add Food</button>
        <ul>
