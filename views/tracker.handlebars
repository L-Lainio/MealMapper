        </ul>
    </section>
</div>

<div id="db-btns">
    <button class="tracker-save-btn">Save Today's Meals</button>
    <button class="tracker-delete-btn">Delete Today's Meals</button>
</div>


<!-- Input Modal -->
<div id="food-modal" class="modal">
    <div class="modal-content">
        <span class="close">&times;</span>
        <div class="container mt-5">
            <h1>Search Form</h1>
            <form id="search-form">
                <div class="mb-3">
                    {{!-- keyword input--}}
                    <label for="ingredientKeywords" class="form-label">Ingredient Keywords</label>
                    <input type="text" class="form-control" id="ingredientKeywords" placeholder="Enter ingredient keywords">
                </div>
                <div class="row">
                    <div class="col">
                        {{!-- calories range input --}}
                        <label for="minCalories" class="form-label">Min Calories</label>
                        <div class="input-group">
                            <input type="number" class="form-control" id="minCalories" placeholder="Min calories">
                            <span class="input-group-text">kcal</span>
                        </div>
                    </div>
                    <div class="col">
                        <label for="maxCalories" class="form-label">Max Calories</label>
                        <div class="input-group">
                            <input type="number" class="form-control" id="maxCalories" placeholder="Max calories">
                            <span class="input-group-text">kcal</span>
                        </div>
                    </div>
                </div>
                <div class="row mt-3">
                    <div class="col">
                        {{!-- protein range input --}}
                        <label for="minProtein" class="form-label">Min Protein</label>
                        <div class="input-group">
                            <input type="number" class="form-control" id="minProtein" placeholder="Min protein">
                            <span class="input-group-text">g</span>
                        </div>
                    </div>
                    <div class="col">
                        <label for="maxProtein" class="form-label">Max Protein</label>
                        <div class="input-group">
                            <input type="number" class="form-control" id="maxProtein" placeholder="Max protein">
                            <span class="input-group-text">g</span>
                        </div>
                    </div>
                </div>
                <button type="submit" class="btn btn-primary mt-3">Search</button>
            </form>
            <!-- Search results container -->
            <div id="search-results" class="search-results mt-4"></div>
        </div>
        {{!-- append results here --}}
        <div id="food-details"></div>
        <button id="add-food-btn">Add</button>
    </div>
</div>

<!-- Datepicker Modal -->
<div id="datepicker-modal" class="modal">
    <div class="modal-content">
        <span class="close">&times;</span>
        <div class="form-group">
            <label for="datepicker" class="form-label">Select a date:</label>
            <input type="date" id="datepicker" class="form-control">
            <!-- Button to get tracker data for selected date -->
            <button id="getTrackerBtn" class="btn">Get Meals</button>
        </div>
    </div>
</div>

<!-- Recipe Details Modal -->
<div id="recipe-details-modal" class="modal">
    <div class="modal-content">
        <span class="close">&times;</span>
        <div id="recipe-details-content">
            <!-- Recipe details will be appended here dynamically -->
        </div>
    </div>
</div>

<script src="js/modal2.js"></script>
<script src="js/recipeSearch.js"></script>
<script src="js/trackerTracking.js"></script>
